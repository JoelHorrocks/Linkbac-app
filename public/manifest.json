{
  "manifest_version": 3,
  "name": "Link for MB",
  "version": "0.1.0",
  "description": "Link for MB to 3rd party productivity apps.",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Link for MB",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "/v1/*"],
      "matches": [
        "https://api.notion.com/*"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_page": "options.html"
}