{
  "manifest_version": 3,
  "name": "Linkbac.app",
  "version": "0.1.0",
  "description": "Link for ManageBac to 3rd party productivity apps.",
  "key": "KEY",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Linkbac.app",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "identity"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.managebac.com/*",
        "https://linkbac.app/oauth/*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "oauth2": {
    "client_id": "CLIENT_ID",
    "scopes":[
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/drive.install"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [ "/v1/*"],
      "matches": [
        "https://api.notion.com/*"
      ]
    }
  ],
  "host_permissions": [
    "https://api.notion.com/*"
  ],
  "options_page": "options.html"
}